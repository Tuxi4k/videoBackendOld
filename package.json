{
  "name": "video-control-backend",
  "version": "0.0.1",
  "description": "Видеоконтроль56.рф бэкенд",
  "main": "./dist/index.js",
  "author": "Tuxi4k",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^7.0.6",
    "prisma": "^6.17.1"
  },
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon index.ts",
    "build": "tsc && tsc-alias && pnpm copy-prisma",
    "copy-prisma": "shx mkdir -p dist/prisma && shx cp prisma/schema.prisma dist/schema.prisma",
    "db_prod:generate": "prisma generate --schema=./dist/schema.prisma",
    "db_prod:refresh": "prisma db push --force-reset --schema=./dist/schema.prisma",
    "db:refresh": "prisma db push --force-reset",
    "db:generate": "prisma generate"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/nodemailer": "^6.4.0",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
