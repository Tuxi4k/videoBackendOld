generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db.sqlite3"
}

model Contact {
  id        Int      @id @default(autoincrement())
  email     String?   
  phone     String
  fio       String
  address   String
  house     String
  agreement String
  tags      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?
  lastToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}